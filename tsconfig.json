{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["react", "react-dom", "node", "history", "prop-types"]
  },
  "include": ["client/src/**/*"],
  "exclude": ["node_modules", "build"]
}
